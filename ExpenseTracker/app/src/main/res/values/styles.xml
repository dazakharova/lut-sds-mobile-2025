<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Button.Primary" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/blue_600</item>
        <item name="android:textColor">@color/btn_text_on_primary</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">44dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
    </style>

    <style name="Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/btn_outline_stroke</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@color/blue_700</item>
    </style>
</resources>